# Copy this to .env and fill in your values

# Claude Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-haiku-20241022
CLAUDE_DEMO_MODE=false
CLAUDE_FALLBACK_ENABLED=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
SERVER_URL=http://localhost:8000

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ===== ALERTAS AUTOMÁTICAS =====

# Intervalo de verificación (en minutos)
ALERT_CHECK_INTERVAL=30
ALERT_RUN_ON_STARTUP=false

# SMTP Configuration (Mailtrap)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
ALERT_EMAIL_FROM=alertas@miempresa.com
ALERT_EMAIL_TO_STR=admin@miempresa.com,gerente@miempresa.com

# Spam Control (horas mínimas entre alertas del mismo producto)
ALERT_SPAM_INTERVAL_HOURS=2

# ===== WEBHOOK CONFIGURATION =====
# URL del sistema externo Laravel para recibir notificaciones
WEBHOOK_URL=http://tu-dominio.com/api/webhooks/agente/notificacion
# Token de autenticación para el webhook (debe coincidir con AGENTE_WEBHOOK_TOKEN en Laravel)
WEBHOOK_TOKEN=tu_token_secreto_aqui
# Habilitar/Deshabilitar envío de webhooks
WEBHOOK_ENABLED=false